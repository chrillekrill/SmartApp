        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0" Content=""/>
            <!--MainMenu-->
            
        </Grid>
    </Border>
</Window>
